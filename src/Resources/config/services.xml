<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Ecommit\CrudBundle\Crud\CrudFactory" class="Ecommit\CrudBundle\Crud\CrudFactory" public="true">
            <argument type="service" id="Symfony\Component\Routing\RouterInterface"/>
            <argument type="service" id="Symfony\Component\Form\FormFactoryInterface"/>
            <argument type="service" id="Symfony\Component\HttpFoundation\RequestStack"/>
            <argument type="service" id="Doctrine\Persistence\ManagerRegistry" />
            <argument type="service" id="Symfony\Component\Security\Core\Authentication\Token\Storage\TokenStorageInterface"/>
            <argument>%ecommit_crud.template_configuration%</argument>
        </service>
        <service id="ecommit_crud.factory" alias="Ecommit\CrudBundle\Crud\CrudFactory" public="true" />

        <service id="Ecommit\CrudBundle\Helper\CrudHelper" class="Ecommit\CrudBundle\Helper\CrudHelper" public="true">
            <argument type="service" id="Ecommit\UtilBundle\Helper\UtilHelper"/>
            <argument type="service" id="Ecommit\JavascriptBundle\Helper\JqueryHelper"/>
            <argument type="service" id="Symfony\Component\Form\FormFactoryInterface"/>
            <argument type="service" id="Symfony\Component\Routing\RouterInterface"/>
            <argument type="service" id="Symfony\Contracts\Translation\TranslatorInterface"/>
            <argument type="service" id="Twig\Environment"/>
            <argument type="service" id="ecommit_javascript.overlay"/>
            <argument type="collection">
                <argument key="use_bootstrap">%ecommit_javascript.use_bootstrap%</argument>
                <argument key="template_configuration">%ecommit_crud.template_configuration%</argument>
                <argument key="images">%ecommit_crud.images%</argument>
            </argument>
        </service>
        <service id="ecommit_crud.helper" alias="Ecommit\CrudBundle\Helper\CrudHelper" public="true" />

        <service id="Ecommit\CrudBundle\Twig\CrudExtension" class="Ecommit\CrudBundle\Twig\CrudExtension">
            <argument type="service" id="Ecommit\CrudBundle\Helper\CrudHelper"/>
            <argument type="service" id="Twig\Environment"/>
            <argument type="service" id="twig.form.renderer" />
            <argument>%ecommit_crud.theme%</argument>
            <tag name="twig.extension"/>
        </service>

        <service id="Ecommit\CrudBundle\EventListener\MappingEntities" class="Ecommit\CrudBundle\EventListener\MappingEntities">
            <tag name="doctrine.event_listener" event="loadClassMetadata" />
        </service>
    </services>
</container>
